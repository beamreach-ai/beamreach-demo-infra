

# Example Dockerfile with plaintext secrets (do not use in production)

FROM python:3.11-slim

# Set environment variables with secrets (insecure practice)
ENV DB_USERNAME=admin
ENV DB_PASSWORD=supersecretpassword
ENV API_KEY=abc123456789xyz

# Install dependencies
RUN pip install flask

# Copy application files
COPY . /app
WORKDIR /app

# Start the application
CMD ["python", "app.py"]